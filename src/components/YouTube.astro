---
interface Props {
  videoId: string;
}

const { videoId } = Astro.props;
---

<div class="mx-auto max-w-2xl mt-6">
  <div
    style="position:relative;width:100%;height:0;padding-bottom:56.25%;overflow:hidden;"
  >
    <iframe
      class="rounded-lg"
      style="margin:0;position:absolute;top:0;left:0;width:100%;height:100%"
      src={`https://www.youtube.com/embed/${videoId}`}
      title="YouTube video player"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen></iframe>
  </div>
</div>
